<h1>Listing courseras</h1>

<table>
  <thead>
    <tr>
      <th>Cid</th>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courseras.each do |coursera| %>
      <tr>
        <td><%= coursera.cid %></td>
        <td><%= coursera.name %></td>
        <td><%= coursera.email %></td>
        <td><%= link_to 'Show', coursera %></td>
        <td><%= link_to 'Edit', edit_coursera_path(coursera) %></td>
        <td><%= link_to 'Destroy', coursera, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coursera', new_coursera_path %>
